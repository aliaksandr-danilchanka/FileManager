<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_default_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">


        <TextView
            android:id="@+id/title_default_folder_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_small"
            android:text="@string/default_folder"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/default_folder_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_default_folder_settings"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            style="@android:color/secondary_text_dark"
            android:textSize="@dimen/text_size_small"/>

    </RelativeLayout>
</LinearLayout>